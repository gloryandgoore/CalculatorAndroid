<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#E2C2C6">

    <TextView
        android:id="@+id/input_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="start"
        android:minHeight="48dp"
        android:text="@string/_0"
        android:textColor="#546E7A"
        android:textColorHint="@color/DarkOrchid"
        android:textSize="40sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#9C528B"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:id="@+id/button_7"
            android:text="@string/_7" />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#9C528B"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_weight="25"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:id="@+id/button_8"
            android:text="@string/_8" />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="25"
            android:backgroundTint="#9C528B"

            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:id="@+id/button_9"
            android:text="@string/_9" />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:layout_marginEnd="10dp"

            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:id="@+id/button_plus"
            android:backgroundTint="#610F7F"
            android:text="@string/_plus" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#9C528B"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_weight="25"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:id="@+id/button_4"
            android:text="@string/_4" />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#9C528B"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_weight="25"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:id="@+id/button_5"
            android:text="@string/_5" />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="25"
            android:backgroundTint="#9C528B"

            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:id="@+id/button_6"
            android:text="@string/_6" />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:layout_marginEnd="10dp"

            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:id="@+id/button_minus"
            android:backgroundTint="#610F7F"
            android:text="@string/_minus" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#9C528B"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_weight="25"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:id="@+id/button_1"
            android:text="@string/_1" />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#9C528B"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_weight="25"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:id="@+id/button_2"
            android:text="@string/_2" />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="25"
            android:backgroundTint="#9C528B"

            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:id="@+id/button_3"
            android:text="@string/_3" />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:layout_marginEnd="10dp"

            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:id="@+id/button_multiply"
            android:backgroundTint="#610F7F"
            android:text="@string/_multiply" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_c"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="25"
            android:backgroundTint="#B9929F"
            android:text="@string/_clear"
            android:textColor="#5D4037"
            android:textSize="30sp"
            app:cornerRadius="36dp"
            tools:ignore="TextContrastCheck" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_0"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="25"
            android:backgroundTint="#9C528B"
            android:text="@string/_0"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:cornerRadius="36dp"
            tools:ignore="DuplicateSpeakableTextCheck,DuplicateSpeakableTextCheck" />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="25"
            android:backgroundTint="#2F0147"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:id="@+id/button_equals"
            android:text="@string/_equals" />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:layout_marginEnd="10dp"

            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:id="@+id/button_divide"
            android:backgroundTint="#610F7F"
            android:text="@string/_divide" />


    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_history"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:text="@string/advance_with_history"
        android:layout_margin="30dp"
        android:textColor="@color/white"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textSize="30sp"
        android:lines="10"
        android:visibility="invisible"
        android:id="@+id/history_tv"/>


</LinearLayout>

